{
  "version": "1.3.28",
  "name": "@frsource/floating-ui-vue",
  "description": "Floating-ui composable for vue",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "sass": "src/index.scss",
  "styles": "dist/index.css",
  "scripts": {
    "start": "pnpm clean && microbundle  watch --tsconfig tsconfig.build.json",
    "build": "pnpm clean && pnpm minify-data && microbundle --compress --tsconfig tsconfig.build.json && pnpm copy-tmp-to-src && pnpm clean:tmp && pnpm restore-index",
    "lint": "pnpm lint.script",
    "lint.fix": "pnpm lint.script.fix",
    "lint.script": "eslint . --ext .js,.ts,.vue",
    "lint.script.fix": "pnpm lint.script --fix",
    "lint.ci": "pnpm lint.script --max-warnings 0",
    "release": "semantic-release",
    "release.ci": "pnpm release --yes",
    "release.test": "pnpm release --no-git-tag-version --no-push --skip-npm",
    "clean": "rimraf dist/**/*",
    "dev-server": "http-server -p 3000",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "homepage": "https://github.com/FRSOURCE/floating-ui-vue/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FRSOURCE/floating-ui-vue.git"
  },
  "keywords": [
    "custom scrollbar",
    "light scrollbar",
    "lightweight",
    "simple",
    "every browser"
  ],
  "bugs": {
    "url": "https://github.com/FRSOURCE/floating-ui-vue/issues"
  },
  "author": "Szymon Dziewo≈Ñski <szymondziewonski@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.6",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "concurrently": "7.4.0",
    "cpy-cli": "4.2.0",
    "cypress": "10.8.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "http-server": "14.1.1",
    "incstr": "1.2.3",
    "microbundle": "0.15.1",
    "prettier": "2.7.1",
    "renamer": "4.0.0",
    "sass": "1.54.9",
    "semantic-release": "19.0.5",
    "ts-essentials": "9.3.0",
    "typescript": "4.8.3",
    "vitepress": "1.0.0-alpha.15",
    "vue": "3.2.39"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
